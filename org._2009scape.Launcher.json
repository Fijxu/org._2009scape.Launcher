{
    "id": "org._2009scape.Launcher",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "2009scape-launcher",
    "separate-locales": false,
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk11"
    ],
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=home/.local/share/2009scape",
        "--env=PATH=/usr/bin:/app/bin:/app/jre/bin"
    ],
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands" : [ "/usr/lib/sdk/openjdk11/install.sh" ]
        },
        {
            "name": "2009scape",
            "buildsystem": "simple",
            "build-commands": [
                "install -D 2009scape-launcher-sc /app/bin/2009scape-launcher",
                "install -Dm644 saradomin.svg /app/share/icons/hicolor/scalable/apps/org._2009scape.Launcher.svg",
                "install -Dm644 org._2009scape.Launcher.desktop /app/share/applications/org._2009scape.Launcher.desktop",
                "install -Dm644 org._2009scape.Launcher.appdata.xml /app/share/metainfo/org._2009scape.Launcher.appdata.xml"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "2009scape-launcher",
                    "commands": [
                          "exec 2009scape-launcher \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "url": "https://gitlab.com/2009scape/Saradomin-Launcher/-/jobs/artifacts/master/raw/Saradomin/2009scape-launcher-sc?job=pack_linux_sc",
                    "sha256": "6c871c2602bd25558e2a4088a8636f5710884357527d1a5cf9672d3f51bfd2e8"
                },
                {
                    "type": "file",
                    "url": "https://gitlab.com/2009scape/Saradomin-Launcher/-/raw/master/Saradomin/Resources/Icons/saradomin.svg",
                    "sha256": "cfaa85e9a86b7a4d9c784b00a44cd6c4b43ef7d7597f55da967436ff92b1dae8"
                },
                {
                    "type": "file",
                    "url": "https://gitlab.com/2009scape/Saradomin-Launcher/-/raw/master/Saradomin/Resources/Linux/org._2009scape.Launcher.desktop",
                    "sha256": "b6bc5a6fce0c9ad567f520b6e3a58e68351b34ff46197949298f4643aa362c98"
                },
                {
                    "type": "file",
                    "url": "https://gitlab.com/2009scape/Saradomin-Launcher/-/raw/master/Saradomin/Resources/Linux/org._2009scape.Launcher.appdata.xml",
                    "sha256": "4468704da5d6d2dd768650cefb3802be400c0406db01ede25f42c0c76e4a798c"
                }
            ]
        }
    ]
}
